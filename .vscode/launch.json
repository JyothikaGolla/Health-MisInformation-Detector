{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Run: API + Web",
      "configurations": [
        "API: Uvicorn",
        "Web: Vite"
      ]
    }
  ],
  "configurations": [
    {
      "name": "API: Uvicorn",
      "type": "python",
      "request": "launch",
      "program": "uvicorn",
      "args": [
        "main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "cwd": "${workspaceFolder}/api",
      "console": "integratedTerminal",
      "justMyCode": true,
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Web: Vite",
      "type": "node-terminal",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/client"
    }
  ]
}